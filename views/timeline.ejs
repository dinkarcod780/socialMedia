<%- include("partials/header")%>

<%- include("partials/nav")%>

<div class="main  bg-black  h-[100vh] w-full">

  
<div class=" w-[80%]  h-screen  p-[2%] rounded-xl m-auto flex gap-7 ">
  <% user.posts.forEach((post)=>{%>
 <div class="card-main  h-[80vh] bg-white  w-[29%] flex ">

<div class="h-[76vh] w-[100%] bg-white">
  <div class=" card-start flex  gap-3 h-[12vh] w-[90%] ">
   <div class="h-[10vh]  w-[20%] rounded-full">
   <img class="h-[10vh] w-[100%]  rounded-full object-cover" src="/images/<%=user.profilepic%>" alt="">
 </div>
 <div class="name w-[69%] bg-white  [10vh]">
   <h1 class="text-xl font-bold"><%=user.name%></h1>
 <small class="text-zinc-600"><%=post.createdAt.toLocaleTimeString()%> |
     <%=post.createdAt.toLocaleDateString()%>
</small>
 </div>
 </div>
 <div class="big-card h-[65vh] w-full "><img class="h-[55vh] w-full  rounded object-cover" src="/images/<%=post.media%>" alt="">
 
   <div class="like h-[12%] w-[96%]  ml-2 text-[18px] flex gap-x-1 mt-1">
    <span class="text-md">
      <%= post.likes.length%>
    </span>
    <a href="/like/<%=post._id%>">
    <% if(post.likes.includes(user._id)){%>
      <i class=" text-red-300 text-[25px] ri-heart-3-fill"></i>
   <%}else{%>
    <i class="ri-heart-3-fill"></i>
   <%}%>
   </a>
     <!-- <i class="ri-heart-3-fill"></i> -->
     <!-- <i class="ri-chat-3-line"></i>   -->
     <div class="edit  h-[100%] w-[35%] d-flex  ml-[48%]">
     <a href="/update-post/<%= post._id%>" class="text-blue-300 ml-8 text-[20px] ri-edit-box-line"></a>
      <a href="/delete-post/<%= post._id%>" class="text-red-300 text-[20px]  ri-delete-bin-4-line mr"></a>
    </div>
   </div>
 </div>
</div>
 </div>
 <%})%>
